---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  image?: string;
}

const { title, description, pubDate, updatedDate, tags = [], image } = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Andrew Allsop</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-neutral-900 text-neutral-100 min-h-screen">
    <div class="max-w-xl mx-auto px-6 py-16">
      <!-- Nav -->
      <nav class="flex items-center justify-between mb-16 text-sm">
        <div class="flex items-center gap-6">
          <a href="/" class="text-neutral-300 hover:text-white transition-colors">Home</a>
          <a href="/blog" class="text-neutral-300 hover:text-white transition-colors">Notes</a>
        </div>
        <a href="mailto:hello@andrewallsop.com" class="text-white underline underline-offset-4">Contact</a>
      </nav>

      <article>
        <!-- Back Link -->
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm text-neutral-400 hover:text-white mb-8 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
          </svg>
          Back
        </a>

        <!-- Article Header -->
        <header class="mb-10">
          <time class="text-sm text-neutral-500 mb-3 block" datetime={pubDate.toISOString()}>
            {formattedPubDate}
          </time>
          <h1 class="text-2xl font-semibold text-white mb-4 leading-tight">
            {title}
          </h1>
        </header>

        <!-- Article Content -->
        <div class="prose">
          <slot />
        </div>

        <!-- Article Footer -->
        <footer class="mt-12 pt-8 border-t border-neutral-800">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-white text-sm underline underline-offset-4 hover:text-neutral-300"
          >
            View all notes
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </footer>
      </article>
    </div>
  </body>
</html>
