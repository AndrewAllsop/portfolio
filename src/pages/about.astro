---
import '../styles/global.css';

const skillCategories = [
  { label: 'Analytics & Performance', items: [
    { name: 'GA4', url: 'https://analytics.google.com' },
    { name: 'Google Tag Manager', url: 'https://tagmanager.google.com' },
    { name: 'Mixpanel', url: 'https://mixpanel.com' },
    { name: 'Amplitude', url: 'https://amplitude.com' },
    { name: 'Segment', url: 'https://segment.com' },
    { name: 'PostHog', url: 'https://posthog.com' },
    { name: 'Google Sheets', url: 'https://sheets.google.com' },
    { name: 'ChartMogul', url: 'https://chartmogul.com' },
  ]},
  { label: 'Media Channels', items: [
    { name: 'Facebook Ads', url: 'https://www.facebook.com/business/ads' },
    { name: 'LinkedIn Ads', url: 'https://business.linkedin.com/marketing-solutions/ads' },
    { name: 'Google Ads', url: 'https://ads.google.com' },
    { name: 'Twitter Ads', url: 'https://ads.x.com' },
    { name: 'Ahrefs', url: 'https://ahrefs.com' },
    { name: 'Twilio', url: 'https://www.twilio.com' },
  ]},
  { label: 'CRM & Automation', items: [
    { name: 'HubSpot', url: 'https://www.hubspot.com' },
    { name: 'Salesforce', url: 'https://www.salesforce.com' },
    { name: 'Customer.io', url: 'https://customer.io' },
    { name: 'Zapier', url: 'https://zapier.com' },
  ]},
  { label: 'Strategy', items: [
    { name: 'Product-led Growth' },
    { name: 'Inside Sales' },
    { name: 'Segmentation' },
    { name: 'Messaging' },
    { name: 'SaaS Metrics' },
    { name: 'Go-to-Market Strategy' },
  ]},
  { label: 'AI', items: [
    { name: 'ChatGPT', url: 'https://chatgpt.com' },
    { name: 'Claude', url: 'https://claude.ai' },
    { name: 'Local LLMs' },
    { name: 'Cursor', url: 'https://www.cursor.com' },
    { name: 'n8n', url: 'https://n8n.io' },
    { name: 'Replit', url: 'https://replit.com' },
    { name: 'Claude Code', url: 'https://claude.ai/code' },
    { name: 'OpenClaw', url: 'https://openclaw.com' },
  ]},
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>About | Andrew Allsop</title>
    <meta name="description" content="About Andrew Allsop - developer and designer." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 min-h-screen transition-colors">
    <script is:inline>
      if (localStorage.theme === 'light' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: light)').matches)) {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
    <div class="max-w-xl mx-auto px-6 py-16">
      <!-- Nav -->
      <nav class="flex items-center justify-between mb-16 text-sm">
        <div class="flex items-center gap-6">
          <a href="/" class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Home</a>
          <a href="/about" class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white transition-colors">About</a>
          <a href="/blog" class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Notes</a>
        </div>
        <a href="mailto:andrew@wunderkindagency.com" class="text-neutral-900 dark:text-white underline underline-offset-4">Contact</a>
      </nav>

      <!-- Header -->
      <div class="mb-10">
        <h1 class="text-2xl font-semibold text-neutral-900 dark:text-white mb-6">About</h1>

        <div class="space-y-4 text-neutral-600 dark:text-neutral-400 leading-relaxed">
          <p>
            Most marketing advice sounds great until you try to make it work with an actual budget.
          </p>
          <p>
            I help growing businesses turn marketing into something that reliably generates revenue. That means demand
            gen, operations, and helping teams understand how growth really works when resources are finite and the
            board wants answers.
          </p>
          <p>
            I'm less interested in chasing the newest channel and more interested in fixing what's underneath: pipeline
            quality, conversion rates, sales alignment, and whether the math actually works.
          </p>
          <p>
            I've spent my career across B2B SaaS and growth-stage brands, helping teams shift from "we're doing a lot of
            marketing" to "we know what's working and why." Usually that means simplifying the stack, tightening
            measurement, and having honest conversations about what to stop doing.
          </p>
          <p>
            Outside of work, I'm a dad, currently juggling family life with renovating our house. Most spare time is
            spent fixing things, planning the next job, or trying to keep some balance between work, home, and health.
          </p>
        </div>
      </div>

      <!-- Skills -->
      <div class="mb-10">
        <h2 class="text-neutral-500 dark:text-neutral-400 text-sm font-medium mb-6">Marketing Technology</h2>
        <div class="space-y-4">
          {skillCategories.map((category) => (
            <div>
              <h3 class="text-neutral-700 dark:text-neutral-300 text-sm font-medium mb-2">{category.label}</h3>
              <div class="flex flex-wrap gap-2">
                {category.items.map((item) => (
                  item.url ? (
                    <a href={item.url} target="_blank" rel="noopener noreferrer" class="px-3 py-1.5 bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 text-sm rounded hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors">
                      {item.name}
                    </a>
                  ) : (
                    <span class="px-3 py-1.5 bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 text-sm rounded">
                      {item.name}
                    </span>
                  )
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Back -->
      <a
        href="/"
        class="inline-flex items-center gap-2 text-neutral-900 dark:text-white text-sm underline underline-offset-4 hover:text-neutral-600 dark:hover:text-neutral-300 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Back home
      </a>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            localStorage.theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
          });
        }
      });
    </script>
  </body>
</html>
