---
import '../styles/global.css';

const projects = [
  {
    title: 'E-Commerce Platform',
    description: 'Full-stack e-commerce with Next.js, Stripe, and PostgreSQL.',
    link: '#',
  },
  {
    title: 'Task Management App',
    description: 'Collaborative task management with real-time updates.',
    link: '#',
  },
  {
    title: 'Portfolio Template',
    description: 'Modern portfolio template built with Astro and Tailwind.',
    link: '#',
  },
  {
    title: 'Weather Dashboard',
    description: 'Weather dashboard with location-based forecasts.',
    link: '#',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Projects | Andrew Allsop</title>
    <meta name="description" content="Projects by Andrew Allsop." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-neutral-900 text-neutral-100 min-h-screen">
    <div class="max-w-xl mx-auto px-6 py-16">
      <!-- Nav -->
      <nav class="flex items-center justify-between mb-16 text-sm">
        <div class="flex items-center gap-6">
          <a href="/" class="text-neutral-300 hover:text-white transition-colors">Home</a>
          <a href="/about" class="text-neutral-300 hover:text-white transition-colors">About</a>
          <a href="/blog" class="text-neutral-300 hover:text-white transition-colors">Notes</a>
        </div>
        <a href="mailto:hello@andrewallsop.com" class="text-white underline underline-offset-4">Contact</a>
      </nav>

      <!-- Header -->
      <div class="mb-10">
        <h1 class="text-2xl font-semibold text-white mb-3">Projects</h1>
        <p class="text-neutral-400">A selection of things I've built.</p>
      </div>

      <!-- Projects -->
      <div class="space-y-0">
        {projects.map((project) => (
          <a
            href={project.link}
            class="flex items-center justify-between py-4 border-t border-neutral-800 hover:bg-neutral-800/50 -mx-3 px-3 transition-colors group"
          >
            <div>
              <span class="text-white block mb-1">{project.title}</span>
              <span class="text-sm text-neutral-500">{project.description}</span>
            </div>
            <svg class="w-4 h-4 text-neutral-500 group-hover:text-white transition-colors flex-shrink-0 ml-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </body>
</html>
