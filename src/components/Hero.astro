---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Hi, I'm Andrew Allsop",
  subtitle = "Developer, designer, and creative technologist. I build beautiful, functional digital experiences."
} = Astro.props;
---

<section class="relative py-24 md:py-32 lg:py-40">
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute left-1/2 top-0 -translate-x-1/2 w-[800px] h-[800px] bg-gradient-to-br from-primary-200/40 via-purple-200/30 to-transparent dark:from-primary-900/20 dark:via-purple-900/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <!-- Greeting -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm font-medium mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
        </span>
        Available for new projects
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
        {title}
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
        {subtitle}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors hover:no-underline"
        >
          View My Work
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="/about"
          class="inline-flex items-center gap-2 px-6 py-3 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 font-medium rounded-lg transition-colors hover:no-underline"
        >
          About Me
        </a>
      </div>
    </div>
  </div>
</section>
